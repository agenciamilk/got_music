<?xml version='1.0' encoding='utf-8'?>
<!-- Trocar por com.gotmusic.{nome do artista} -->
<widget id="com.gotmusic.farfromalaska" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <!-- Trocar pelo nome do artista -->
    <name>Far From Alaska</name>
    <!-- Descrição -->
    <description>
        Fique por dentro de todas as novidades da banda Far From Alaska
    </description>
    <author email="contact@gotmusicapp.com" href="http://www.gotmusicapp.com">
        Got Music
    </author>
    <content src="index.html" />
    <access origin="*" />

    <!-- Preferences -->
    <preference name="orientation" value="portrait" />
    <preference name="ios-orientation-iphone" value="portrait" />
    <preference name="ios-orientation-ipad" value="portrait" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="SplashScreen" value="screen" />


    <!-- Icons & Splashscreens -->
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/appicon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/appicon-60.png" width="60" height="60" />
        <icon src="res/ios/appicon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/appicon-76.png" width="76" height="76" />
        <icon src="res/ios/appicon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/ios/appicon-Small-40.png" width="40" height="40" />
        <icon src="res/ios/appicon-Small-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/appicon.png" width="57" height="57" />
        <icon src="res/ios/appicon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/appicon-72.png" width="72" height="72" />
        <icon src="res/ios/appicon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/appicon-Small.png" width="29" height="29" />
        <icon src="res/ios/appicon-Small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/appicon-Small-50.png" width="50" height="50" />
        <icon src="res/ios/appicon-Small-50@2x.png" width="100" height="100" />


        <splash src="res/ios/Default.png" width="320" height="480"/>
        <splash src="res/ios/Default@2x.png" width="640" height="960"/>
        <splash src="res/ios/Default-Portrait.png" width="768" height="1024"/>
        <splash src="res/ios/Default-Portrait@2x.png" width="1536" height="2048"/>
        <splash src="res/ios/Default-568h@2x.png" width="640" height="1136"/>
        <splash src="res/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="res/ios/Default-Portrait-736h.png" width="1242" height="2208"/>
    </platform>

</widget>

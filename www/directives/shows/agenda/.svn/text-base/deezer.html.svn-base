<div id="deezer" class="item row">
    <div class="col-xs-12">
        <div id="title" class="row">
            <div class="col-xs-12">Playlists</div>
        </div>
        <div id="content" class="row">
            <div class="col-xs-12">

                <img class="album-image" ng-src="{{deezer.track_album_cover}}">

                <div class="deezer-content">
                    <div class="deezer-header">
                        <div class="deezer-track">{{deezer.track_title}}</div>
                        <div class="deezer-artist">{{deezer.track_artist}}</div>
                    </div>

                    <div id="dz-root"></div>

                    <div id="dzSlider" ng-click="sliderClicked($event)">
                        <div id="dzProgress" ng-style="{'width': (deezer.time_current / deezer.time_total * 100) + '%'}"><div class="inline" id="progress_hand"></div></div>
                    </div>
                    <button class="ctn_btn sprite btn_prev" id="previous" ng-click="deezer.previous()">Previous</button>
                    <button class="ctn_btn sprite btn_play" id="play" ng-click="deezer.play()">Play</button>
                    <button class="ctn_btn sprite btn_pause" id="pause" ng-click="deezer.pause()">Pause</button>
                    <button class="ctn_btn sprite btn_next" id="next" ng-click="deezer.next()">Next</button>

                </div>

            </div>

        </div>

    </div>
</div>